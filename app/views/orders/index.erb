<a href="/show">Back to account page</a>

<h1>All Orders</h1>
<table>
  <th>Order Number</th>
  <th>Customer Name</th>
  <th>Date </th>
  <th>Weight</th>
  <th>Price</th>
  <th>Comments</th>
  <% Order.all.sort_by{|order| order.date_made}.reverse.each do |order| %>
    <tr>
      <td><%= order.number %></td>
      <td><a href="/users/<%= order.user.id %>"><%= order.user.name %></a></td>
      <td><%= order.date_made %></td>
      <td><%= order.weight %></td>
      <td><%= order.price %></td>
      <td><%= order.comments %></td>
    </tr>
  <% end %>
</table>
