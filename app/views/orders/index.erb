<a href="/show">Back to account page</a>


<h1>Current Orders</h1>
<table>
  <th>Order Number</th>
  <th>Customer Name</th>
  <th>Date Created</th>
  <th>Weight</th>
  <th>Price</th>
  <th>Comments</th>
  <th>Make Changes</th>
  <th>Dropped Off?</th>
  <% Order.all.sort_by{|order| order.date_made}.reverse.each do |order| %>
    <% if !order.dropped_off %>
      <tr>
        <td><a href="/orders/<%= order.id %>"><%= order.number %></a></td>
        <td><a href="/users/<%= order.user.id %>"><%= order.user.name %></a></td>
        <td><%= order.date_made %></td>
        <td><%= order.weight %></td>
        <td><%= order.price %></td>
        <td><%= order.comments %></td>
        <td><button><a href="/orders/<%= order.id %>/edit">Edit Order</a></button></td>
        <td>
          <form class="" action="/orders/<%=order.id%>/status" method="post">
          <select name="status">
            <option value="true">Yes</option>
            <option
              <% if !order.dropped_off %>
                <%= selected="selected" %>
              <% end %>
              value="false">No
            </option>
          </select>
          <input type="submit" value="save">
          </form>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>



